// Inclui todas as definições comuns do silakka54.dtsi
#include "silakka54.dtsi"

// Sobrescreve/adiciona configurações específicas para o lado direito
&split {
    // Define que este lado é o "periférico" (slave)
    split-role = "peripheral";
};

// Adicione esta seção
&keymap_transform {
    // Desloca as colunas do lado direito por 6,
    // porque o lado esquerdo ocupa as primeiras 6 colunas.
    col-offset = <6>;
};
