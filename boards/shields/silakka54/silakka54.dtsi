#include <dt-bindings/zmk/matrix_transform.h> 

/ {
    //define as configurações de scan e split, é um ponteiro para a configurações definidas logo abaixo
    // para scan use "kscan0" para o split use "split"
    chosen {
        zmk,kscan = &kscan0;
        zmk,split = &split;
        zmk,matrix_transform = &keymap_transform;
    };

    //https://zmk.dev/docs/config/kscan
    kscan0: kscan {
        compatible = "zmk,kscan-gpio-matrix";
        label = "KSCAN";
        
        col-gpios
            = <&gpio0 2 (GPIO_ACTIVE_LOW)>
            , <&gpio1 15 (GPIO_ACTIVE_LOW)>
            , <&gpio1 13 (GPIO_ACTIVE_LOW)>
            , <&gpio1 11 (GPIO_ACTIVE_LOW)>
            , <&gpio0 10 (GPIO_ACTIVE_LOW)>
            , <&gpio0 9 (GPIO_ACTIVE_LOW)>
            ;

        row-gpios
            = <&gpio1 6 (GPIO_ACTIVE_LOW | GPIO_PULL_UP)>
            , <&gpio1 4 (GPIO_ACTIVE_LOW | GPIO_PULL_UP)>
            , <&gpio0 11 (GPIO_ACTIVE_LOW | GPIO_PULL_UP)>
            , <&gpio1 0 (GPIO_ACTIVE_LOW | GPIO_PULL_UP)>
            , <&gpio0 24 (GPIO_ACTIVE_LOW | GPIO_PULL_UP)>
            ;
    };

    split: split {
        compatible = "zmk,split-ble";
        label = "SPLIT";
    };

    keymap_transform: keymap_transform {
        compatible = "zmk,matrix-transform";
        columns = <6>;
        rows = <5>;

        // RC(linha, coluna)
        map = <
           RC(0,0) RC(0,1) RC(0,2) RC(0,3) RC(0,4) RC(0,5)
           RC(1,0) RC(1,1) RC(1,2) RC(1,3) RC(1,4) RC(1,5)
           RC(2,0) RC(2,1) RC(2,2) RC(2,3) RC(2,4) RC(2,5)
           RC(3,0) RC(3,1) RC(3,2) RC(3,3) RC(3,4) RC(3,5)
           RC(4,0) RC(4,1) RC(4,2) RC(4,3) RC(4,4) RC(4,5)
        >;
    };
};
