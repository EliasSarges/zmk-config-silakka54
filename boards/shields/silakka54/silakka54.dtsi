#include <dt-bindings/zmk/matrix_transform.h> 

/ {
    //define as configurações de scan e split, é um ponteiro para a configurações definidas logo abaixo
    // para scan use "kscan0" para o split use "split"
    chosen {
        zmk,kscan = &kscan0;
        zmk,split = &split;
        zmk,matrix_transform = &keymap_transform;
        zmk,physical-layout = <&physical_layout_default>;
    };

    //https://zmk.dev/docs/config/kscan
    kscan0: kscan {
        compatible = "zmk,kscan-gpio-matrix";
        label = "KSCAN";

        // A ordem aqui define qual é a linha 0, 1, 2...
        row-gpios
            = <&gpio0 2 GPIO_ACTIVE_HIGH>
            , <&gpio0 3 GPIO_ACTIVE_HIGH>
            , <&gpio0 4 GPIO_ACTIVE_HIGH>
            , <&gpio0 5 GPIO_ACTIVE_HIGH>
            , <&gpio0 29 GPIO_ACTIVE_HIGH>
            ;

        // A ordem aqui define qual é a coluna 0, 1, 2...
        col-gpios
            = <&gpio0 6 (GPIO_ACTIVE_HIGH | GPIO_PULL_DOWN)>
            , <&gpio0 7 (GPIO_ACTIVE_HIGH | GPIO_PULL_DOWN)>
            , <&gpio0 8 (GPIO_ACTIVE_HIGH | GPIO_PULL_DOWN)>
            , <&gpio0 9 (GPIO_ACTIVE_HIGH | GPIO_PULL_DOWN)>
            , <&gpio0 10 (GPIO_ACTIVE_HIGH | GPIO_PULL_DOWN)>
            , <&gpio0 11 (GPIO_ACTIVE_HIGH | GPIO_PULL_DOWN)>
            ;
    };

    split: split {
        compatible = "zmk,split-ble";
        label = "SPLIT";
    };

    zmk_reset: reset {
        compatible = "zmk,gpio-reset";
        label = "RESET";
        gpios = <&gpio0 18 (GPIO_ACTIVE_LOW | GPIO_PULL_UP)>;
    };

    keymap_transform: keymap_transform {
        compatible = "zmk,matrix-transform";
        columns = <6>;
        rows = <5>;

        // RC(linha, coluna)
        map = <
        // Col 0    Col 1    Col 2    Col 3    Col 4    Col 5
           RC(0,0)  RC(0,1)  RC(0,2)  RC(0,3)  RC(0,4)  RC(0,5)  // Linha 0
           RC(1,0)  RC(1,1)  RC(1,2)  RC(1,3)  RC(1,4)  RC(1,5)  // Linha 1
           RC(2,0)  RC(2,1)  RC(2,2)  RC(2,3)  RC(2,4)  RC(2,5)  // Linha 2
           RC(3,0)  RC(3,1)  RC(3,2)  RC(3,3)  RC(3,4)  RC(3,5)  // Linha 3
           RC(4,0)  RC(4,1)  RC(4,2)  RC(4,3)  RC(4,4)  RC(4,5)  // Linha 4
        >;
    };

    physical_layout_default: physical_layout_default {
        compatible = "zmk,physical-layout";
        display-name = "Silakka54 Default";
        kscan = <&kscan0>;
        transform = <&keymap_transform>;
    };
};

